{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="auth-form" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="popup__wrap">
        <p class="message error"></p>

        <div class="popup__wrap_tabs_tab">
            <div id="popup-login-content" class="popup__wrap_logIn">

                <!-- Input -->
                <div class="input__wrap">
                    <label class="input__wrap_label">Логин / Электронная почта</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                </div>

                <!-- Input -->
                <div class="input__wrap">
                    <label class="input__wrap_label">Пароль</label>
                    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                </div>

                <div class="popup-login-content__links">
                    <a href="{{ path('fos_user_resetting_request') }}" class="popup-login-content__links__item">
                        Забыли пароль ?
                    </a>
                    <a href="{{ path('fos_user_registration_register') }}" class="popup-login-content__links__item">
                        Зарегистрироваться
                    </a>
                </div>

                <div class="center__child">
                    <input type="submit" id="_submit" name="_submit" value="Вход" class="mainBtn" />
                </div>
            </div>
        </div>
    </div>
</form>