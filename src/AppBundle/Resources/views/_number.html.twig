<div class="b-info__item">
    <div class="b-info__item-image">
        {% if (check_image(number)) %}
            <img src="{{ image_thumbnail_url(number, null, 'small') }}" alt="">
        {% else %}
            <img src="{{ image_url(number) }}" alt="">
        {% endif %}
    </div>
    <div class="b-info__item-number">{{ number.title }}</div>
    <div class="b-info__item-text">{{ number.description }}</div>
    <div class="b-info__item-more">
        <a href="{{ number.url }}">{{ number.urlText }}
            <div class="svg-icon svg-icon--arrow" aria-hidden="true">
                <svg class="svg-icon__link">
                    <use xlink:href="#arrow"></use>
                </svg>
            </div>
        </a>
    </div>
</div>